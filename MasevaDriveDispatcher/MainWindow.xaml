<Window x:Class="MasevaDriveDispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasevaDriveDispatcher"
        mc:Ignorable="d"
        Title="Maseva Drive" Height="800" Width="600"  WindowStyle="None" SnapsToDevicePixels="True" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" IsManipulationEnabled="True" MouseDown="Window_MouseDown" AllowsTransparency="True" >
	
	<Window.Background>
		<SolidColorBrush Color="#FF515151" Opacity="0.5"/>
	</Window.Background>
	<Window.Resources>
		
		<Style TargetType="Button">
			<Setter Property="Margin" Value="2"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="BorderBrush">
				<Setter.Value>
				<SolidColorBrush Color="#FF666666" Opacity="0.0"/>
				</Setter.Value>
			</Setter>
			<Setter Property="Opacity" Value="1"/>
		</Style>
	</Window.Resources>
	<Grid >
		<Border>			
			<Border.BitmapEffect>
				<BlurBitmapEffect Radius="30" />
			</Border.BitmapEffect>
			<Canvas>
				<Canvas.Background>
					<SolidColorBrush Color="#FF555555" Opacity="0.75"/>
				</Canvas.Background>
			</Canvas>
		</Border>
		<Border Padding="15">
		<Grid  >
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="190"/>
				<RowDefinition Height="190"/>
				<RowDefinition Height="190"/>
				<RowDefinition Height="190"/>
				<RowDefinition Height="190"/>
			</Grid.RowDefinitions>
			<Button Grid.ColumnSpan="2"/>
			<Button Grid.Column="2"/>
			<Button Grid.Row="1" Grid.ColumnSpan="3"/>
			<Button Grid.Row="2"/>
			<Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
			<Button Grid.Row="3" Grid.Column="1"/>
			<Button Grid.Row="3"/>
			<Button Grid.Column="3" Grid.Row="3"/>
			
		</Grid>
		</Border>

	</Grid>
</Window>
