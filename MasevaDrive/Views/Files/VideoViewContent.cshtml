
@{
	ViewBag.Title = "Video";
	Layout = "~/Views/Shared/_Layout.cshtml";
	
}
<style>
	.videoFill {
    position: absolute;
	left:0;
	top:0; 
    width: auto; 
    height: auto; 
	max-width: 100%;
	max-height:100%;
    z-index: 100;
    background-size: cover;
    overflow: hidden;
}
</style>

<div style="width:100%; padding-top:2vw;">
	<div style="position:relative; max-width:100%; max-height:100%; height:1080px" class="wrapper">
		<video controls autoplay class="videoFill">
			<source src="@Model" type='video/webm;codecs="vp8, vorbis"'>
			Your browser does not support HTML5 video.
		</video>
	</div>
</div>

